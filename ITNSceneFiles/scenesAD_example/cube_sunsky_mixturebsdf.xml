<?xml version="1.0" encoding="utf-8"?>

<scene version="0.5.0">


        <emitter type="sunsky">
                <vector  name="sunDirection"   x="$x" y="$y" z="$z"/>
                <float name="sunScale" value="2"/>
                <float name="sunRadiusScale" value="70"/>
        </emitter>




	<shape type="obj">
		<string name="filename" value="../models/$meshmodel.obj"/>

                <bsdf  type="mixturebsdfAD">

			<floatAD  name="weights"  value="0.32" id_AD = "w1"/>

		        <bsdf type="homogeneousDiffuse">
                                <spectrum_AD  name="reflectance"  value = "0.5" id_AD = "albedo"/>
                        </bsdf>
 			<floatAD  name="weights"  value="0.68" id_AD = "w2"/>
                        <bsdf type="homogeneousRoughConductor">
                                <string name="distribution" value="ggx"/>
                                <spectrum_AD  name="alpha"  value = "0.01" id_AD = "alpha"/>
                        </bsdf>



		</bsdf>

	<transform name="toWorld">
			<rotate x="0" y="1" z="0" angle="45"/>
			<translate x="0" y="0.5" z="-1.5"/>
			<scale x="0.72" y="0.72" z="0.72" />
		</transform>
	</shape>

        <shape type="rectangle">
                <transform name="toWorld">
                        <rotate x="1" y="0" z="0" angle="-90"/>
                        <scale x="20" y="20" z="20"/>
                </transform>

                <bsdf type="diffuse">
                        <texture name="reflectance" type="bitmap">
                                <string name="filename" value="../textures/concrete_darker.png"/>
                                <float name="uscale" value="20"/>
                                <float name="vscale" value="20"/>
                        </texture>
                </bsdf>
        </shape>

	<sensor type="perspective">
                <float name="fov" value="2.5"/>
                <float name="nearClip" value="1.0"/>
                <float name="farClip" value="100"/>

                <transform name="toWorld">
                        <lookAt origin="0, 24, -24" target="0, 23, -23" up="0, 1, 1"/>
                        <rotate x="1" y="0" z="0" angle="-30"/>
                </transform>
                <sampler type="ldsampler">
                        <integer name="sampleCount" value="$numSamples"/>
                </sampler>

		<film type="hdrfilm">
			<integer name="width" value="256"/>
			<integer name="height" value="256"/>
			<string name="pixelFormat" value="derivative"/>
			<rfilter type="gaussian"/>
			<boolean name="banner" value="false"/>
		</film>
	</sensor>
	<integrator type="path">
		<integer name="maxDepth" value="-1"/>
		<integer name="rrDepth" value="20"/>
	</integrator>
</scene>
